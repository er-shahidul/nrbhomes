<table class="table table-bordered table-striped table-condensed flip-content table-list">
    <thead>
    <tr class="uppercase">
        <th>{{ 'ID'|trans }}</th>
        <th>{{ 'Plot Name'|trans }}</th>
        <th>{{ 'Plot Number'|trans }}</th>
        <th>{{ 'Owner Address'|trans }}</th>
        <th>{{ 'Total Land'|trans }}<small> {{ '(decimal)'|trans }}</small></th>
        <th width="150px"></th>
    </tr>
    </thead>
    <tbody>
    {% if plots is not empty %}
        {% for plot in plots %}
            <tr>
                <td>{{ plot[0]['id'] }}</td>
                <td>{{ plot[0]['plotName'] }}</td>
                <td>{{ plot[0]['plotNumber'] }}</td>
                <td>{{ plot[0]['address'] }}</td>
                <td>{{ plot['totalArea'] }}</td>
                <td>
                    <a class="btn blue btn-sm" href="{{ path('plot_record_update', {id: plot[0]['id']}) }}"><i class="fa fa-edit"></i></a>
                   {# <a class="btn red btn-sm" href="{{ path('land_delete', {id: plot.id}) }}"><i class="fa fa-times"></i></a>#}
                </td>

            </tr>
        {% endfor %}
    {% else %}
        <tr class="ta-center">
            <td colspan="15">{{ 'No record found'|trans }}</td>
        </tr>
    {% endif %}
    </tbody>
</table>

<div class='dataTables_paginate paging_bootstrap pagination'>
    {{ knp_pagination_render(plots) }}
</div>
